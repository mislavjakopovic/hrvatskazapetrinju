{% form_theme form 'bootstrap_4_layout.html.twig' %}

{{ form_start(form) }}
<div class="form-group row mb-4">
    {{ form_label(form.title, 'Naslov', {'label_attr': {'class': 'col-form-label text-md-right col-12 col-md-1 col-lg-1'}}) }}
    <div class="col-sm-12 col-md-4 col-lg-10">
        {{ form_widget(form.title) }}
    </div>
</div>

<div class="form-group row mb-4">
    {{ form_label(form.category, 'Kategorija', {'label_attr': {'class': 'col-form-label text-md-right col-12 col-md-1 col-lg-1'}}) }}
    <div class="col-sm-12 col-md-2 col-lg-3">
        {{ form_widget(form.category) }}
    </div>

    {{ form_label(form.city, 'Grad', {'label_attr': {'class': 'col-form-label text-md-right col-12 col-md-1 col-lg-3'}}) }}
    <div class="col-sm-12 col-md-4 col-lg-4">
        {{ form_widget(form.city) }}
    </div>
</div>

<div class="form-group row mb-4">
    {{ form_label(form.content, 'Sadržaj', {'label_attr': {'class': 'col-form-label text-md-right col-12 col-md-1 col-lg-1'}}) }}
    <div class="col-sm-12 col-md-10">
        {{ form_widget(form.content, {'attr': {'class': 'textarea-rows-lg'}}) }}
    </div>
</div>

<div class="form-group row mb-4">
    {{ form_label(form.phone, 'Telefon', {'label_attr': {'class': 'col-form-label text-md-right col-12 col-md-1 col-lg-1'}}) }}
    <div class="col-sm-12 col-md-4 col-lg-4">
        {{ form_widget(form.phone, {'attr': {'pattern': '[0-9 ]{5,12}'}}) }}
    </div>

    {{ form_label(form.email, 'Email', {'label_attr': {'class': 'col-form-label text-md-right col-12 col-md-1 col-lg-1'}}) }}
    <div class="col-sm-12 col-md-4 col-lg-5">
        {{ form_widget(form.email) }}
    </div>
</div>

<div class="form-group row mt-5 mb-4">
    <label class="col-form-label text-md-right col-12 col-md-1 col-lg-1 required" for="post_phone">Lokacija</label>
    <div class="col-12 col-lg-10 col-md-10">
        {% include '@root/components/_map_create.html.twig' %}
        <span>Klikom na kartu označujete vašu lokaciju. Nije obvezna, ali preporučamo da ju ispunite zbog pregleda i lakšeg kontakta.</span>
    </div>
</div>

<div class="form-group row mb-4">
    {{ form_label(form.author, 'Autor', {'label_attr': {'class': 'col-form-label text-md-right col-12 col-md-1 col-lg-1'}}) }}
    <div class="col-sm-12 col-md-4 col-lg-5">
        {{ form_widget(form.author) }}
    </div>
</div>

<div class="form-group row mb-4">
    <div class="mb-3 col-md-12 col-sm-12 offset-lg-7 col-lg-2">
        {{ form_widget(form.save, {label: 'Spremi', 'attr': {'class': 'btn btn-block btn-primary btn-lg'}}) }}
    </div>

    <div class="col-md-12 col-sm-12 col-lg-2">
        <a href="{{ path('post_list_by_intent', {'intent': intent}) }}" class="btn btn-block btn-secondary btn-lg">Natrag</a>
    </div>
</div>

{{ form_end(form) }}
