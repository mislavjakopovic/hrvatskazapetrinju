{% extends '@root/base.html.twig' %}

{% block title %} List by intent {% endblock %}

{% block body %}
    <section class="section mt-5 mt-md-5 mt-lg-1 mt-sm-5">
        <div class="section-body">
            {% include '@root/_flash_messages.html.twig' %}

            <div class="row">
                <div class="col-lg-4">
                    {% if intent|trans == 'looking' %}
                        <h2>Potra≈ænja</h2>
                    {% elseif intent|trans == 'offering' %}
                        <h2>Ponuda</h2>
                    {% endif %}
                </div>
                <div class="col-8 offset-md-6 col-md-6 offset-lg-2 col-lg-6 mt-3 mt-lg-0">
                    <div class="offset-lg-8 offset-md-1 mb-4">
                        <a href="{{ path('post_create_by_intent', {'intent':intent}) }}"
                           class="btn btn-block btn-lg btn-icon icon-left btn-primary"><i
                                    class="far fa-edit"></i> Stvori objavu</a>
                    </div>
                </div>
            </div>
            <div class="row">
                {% for post in posts %}
                    <div class="col-12 col-sm-6 col-md-6 col-lg-4">
                        <article class="article article-style-c">
                            <div class="article-header">
                                <div class="article-image" data-background="{{ asset('images/news/img13.jpg') }}"></div>
                            </div>
                            <div class="article-details">
                                <div class="article-category">
                                    <a href="#">{{ post.category|trans }}</a>
                                    <div class="bullet"></div>
                                    <a href="#">{{ post.createdAt|elapsed }}</a>
                                </div>
                                <div class="article-title">
                                    <h2><a href="{{ path('post_view_by_id', {'id': post.id}) }}">{{ post.title|truncate(64, true) }}</a></h2>
                                </div>
                                <p>{{ post.content }} </p>
                                <div class="article-user">
                                    <img alt="image" src="{{ asset('images/avatar/avatar-1.png') }}">
                                    <div class="article-user-details">
                                        <div class="user-detail-name">
                                            <a href="#">{{ post.author }}</a>
                                        </div>
                                        <div class="text-job">Web Developer</div>
                                    </div>
                                </div>
                            </div>
                        </article>
                    </div>
                {% else %}
                    <h2 class="mx-auto">Stranica je prazna, stvorite prvu objavu..</h2>
                {% endfor %}
            </div>
        </div>
    </section>

    <div class="nav-item">
        {{ knp_pagination_render(posts) }}
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('css/pages/home') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('js/pages/home') }}
{% endblock %}