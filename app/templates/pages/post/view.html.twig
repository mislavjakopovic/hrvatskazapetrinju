{% extends '@root/base.html.twig' %}

{% block title %} Detalji objave {% endblock %}

{% block body %}
    <section class="section mt-5 mt-md-5 mt-lg-1 mt-sm-5">
        <div class="section-body">
            <div class="row">
                <div class="col-12 col-sm-6 col-md-6 col-lg-12">
                    <article class="article article-style-c">
                        <div class="article-header">
                            <div class="article-title">
                                <h1><b style="color: white" href="#">{{ post.title }}</b></h1>
                            </div>
                            <div class="article-image" data-background="{{ asset('images/news/img13.jpg') }}"></div>
                        </div>
                        <div class="article-details">
                            <div class="article-category">
                                <b>Kategorija: </b><a href="#">{{ post.category }}</a>
                                <div class="bullet"></div>
                                <a href="#">{{ post.createdAt|date('d.m.Y h:i') }}</a><hr>
                            </div>
                            <div class="article-title">
                                <b>Sadr≈æaj: </b>
                                <p>{{ post.content|striptags }} </p>
                            </div>
                            <div class="article-user">
                                <img alt="image" src="{{ asset('images/avatar/avatar-1.png') }}">
                                <div class="article-user-details">
                                    <div class="user-detail-name">
                                        {{ post.author }}
                                    </div>
                                    <div class="text-job">{{ post.contact }}</div>
                                </div>
                            </div>
                        </div>
                    </article>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
