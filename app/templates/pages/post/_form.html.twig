{% form_theme form 'bootstrap_4_layout.html.twig' %}

{{ form_start(form) }}
<div class="form-group row mb-4">
    {{ form_label(form.title, 'Naslov', {'label_attr': {'class': 'col-form-label text-md-right col-12 col-md-1 col-lg-1'}}) }}
    <div class="col-sm-12 col-md-4 col-lg-10">
        {{ form_widget(form.title) }}
    </div>
</div>

<div class="form-group row mb-4">
    {{ form_label(form.category, 'Kategorija', {'label_attr': {'class': 'col-form-label text-md-right col-12 col-md-1 col-lg-1'}}) }}
    <div class="col-sm-12 col-md-2 col-lg-3">
        {{ form_widget(form.category) }}
    </div>

    {{ form_label(form.author, 'Vaše ime', {'label_attr': {'class': 'col-form-label text-md-right col-12 col-md-1 col-lg-2'}}) }}
    <div class="col-sm-12 col-md-5">
        {{ form_widget(form.author) }}
    </div>
</div>

<div class="form-group row mb-4">
    {{ form_label(form.content, 'Sadržaj', {'label_attr': {'class': 'col-form-label text-md-right col-12 col-md-1 col-lg-1'}}) }}
    <div class="col-sm-12 col-md-10">
        {{ form_widget(form.content, {'attr': {'class': 'textarea-rows-lg'}}) }}
    </div>
</div>

<div class="form-group row mb-4">
    {{ form_label(form.contact, 'Kontakt podatci', {'label_attr': {'class': 'col-form-label text-md-right col-12 col-md-1 col-lg-1'}}) }}
    <div class="col-sm-12 col-md-4 col-lg-10">
        {{ form_widget(form.contact) }}
    </div>
</div>

<div class="form-group row mb-4">
    <div class="offset-10">
        <a href="{{ path('post_list_by_intent', {'intent': intent}) }}" class="btn btn-secondary btn-lg"> Back</a>
    </div>

    <div class="col-md-1">
        {{ form_widget(form.save, {label: 'Save', 'attr': {'class': 'btn btn-primary btn-lg'}}) }}
    </div>
</div>
{{ form_end(form) }}
