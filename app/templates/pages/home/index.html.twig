{% extends '@root/base.html.twig' %}

{% block title %} {{ platform.full_name }} {% endblock %}

{% block body %}
    <section class="section mt-sm-0 mt-5">
        <div class="section-body">
            <div class="row">
                <div class="col-12 col-md-6 col-lg-6 mt-5 mt-lg-0">
                    <div class="card">
                        <a class="card-body" href="{{ path('post_list_by_intent', { intent: constant('App\\Enum\\PostIntentEnum::LOOKING') }) }}">
                            <div class="empty-state" data-height="500" style="height: 400px;">
                                <img class="img-fluid" src="{{ asset('assets/images/drawkit/hiker-man-colour.svg') }}"
                                     alt="image">
                            </div>
                            <div style="text-align: center">
                                <h2 class="mt-0">Tra≈æim</h2>
                                <p class="lead">
                                    Neki tekst o trazenju..
                                </p>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-6 mt-5 mt-lg-0">
                    <div class="card">
                        <a class="card-body" href="{{ path('post_list_by_intent', { intent: constant('App\\Enum\\PostIntentEnum::OFFERING') }) }}">
                            <div class="empty-state" data-height="500" style="height: 400px;">
                                <img class="img-fluid" src="{{ asset('assets/images/drawkit/storefront-colour.svg') }}"
                                     alt="image">
                            </div>
                            <div style="text-align: center">
                                <h2 class="mt-0">Nudim</h2>
                                <p class="lead">
                                    Neki tekst o trazenju..
                                </p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
            <div class="row">
                {% for post in posts %}
                    <div class="col-12 col-sm-6 col-md-6 col-lg-3">
                        <article class="article article-style-c">
                            <div class="article-header">
                                <div class="article-image" data-background="{{ asset('images/news/img13.jpg') }}"></div>
                            </div>
                            <div class="article-details">
                                <div class="article-category">
                                    <a href="#">{{ post.category }}</a>
                                    <div class="bullet"></div>
                                    <a href="#">{{ post.createdAt|date('d.m.Y h:i') }}</a>
                                </div>
                                <div class="article-title">
                                    <h2><a href="{{ path('post_view_by_id', {'id': post.id}) }}">{{ post.title|truncate(64, true) }}</a></h2>
                                </div>
                                <p>{{ post.content|striptags|truncate(100, true) }} </p>
                                <div class="article-user">
                                    <img alt="image" src="{{ asset('images/avatar/avatar-1.png') }}">
                                    <div class="article-user-details">
                                        <div class="user-detail-name">
                                            <a href="#">{{ post.author }}</a>
                                        </div>
                                        <div class="text-job">Web Developer</div>
                                    </div>
                                </div>
                            </div>
                        </article>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('js/pages/home') }}
{% endblock %}
